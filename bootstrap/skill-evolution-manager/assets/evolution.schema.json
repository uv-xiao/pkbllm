{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "pkbllm skill evolution schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "updated_at": {
      "type": "string"
    },
    "preferences": {
      "type": "array",
      "items": { "type": "string" }
    },
    "fixes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "pitfalls": {
      "type": "array",
      "items": { "type": "string" }
    },
    "verification": {
      "type": "array",
      "items": { "type": "string" }
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": { "type": "string" },
          "command": { "type": "string" },
          "expected": { "type": "string" }
        },
        "required": ["command"]
      }
    }
  }
}

